# EduGo API Admin New - Environment Variables
# Copy this file to .env and fill in the values

# Application
APP_ENV=local

# Server
SERVER_PORT=8081
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s

# PostgreSQL
DATABASE_POSTGRES_HOST=localhost
DATABASE_POSTGRES_PORT=5432
DATABASE_POSTGRES_USER=edugo
DATABASE_POSTGRES_PASSWORD=your_password_here
DATABASE_POSTGRES_DATABASE=edugo
DATABASE_POSTGRES_SSL_MODE=disable
DATABASE_POSTGRES_MAX_OPEN_CONNS=25
DATABASE_POSTGRES_MAX_IDLE_CONNS=10

# Auth - JWT
AUTH_JWT_SECRET=your_jwt_secret_here
AUTH_JWT_ISSUER=edugo-central

# Auth - IAM Platform (remote auth + role management)
AUTH_API_IAM_PLATFORM_BASE_URL=http://localhost:8070/api
AUTH_API_IAM_PLATFORM_TIMEOUT=5s
AUTH_API_IAM_PLATFORM_CACHE_TTL=60s
AUTH_API_IAM_PLATFORM_CACHE_ENABLED=true
AUTH_API_IAM_PLATFORM_REMOTE_ENABLED=false
AUTH_API_IAM_PLATFORM_FALLBACK_ENABLED=false

# Logging
LOGGING_LEVEL=debug
LOGGING_FORMAT=text

# Defaults
DEFAULTS_SCHOOL_COUNTRY=CO
DEFAULTS_SCHOOL_SUBSCRIPTION_TIER=free
DEFAULTS_SCHOOL_MAX_TEACHERS=50
DEFAULTS_SCHOOL_MAX_STUDENTS=500

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Request-ID
